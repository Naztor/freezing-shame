h3 Blog Details

form.form-horizontal(name="form", ng-submit="submit()", novalidate)
  .control-group(ng-class="errorClass('username')")
    label.control-label(for="firstname") Username
    .controls
      input(ng-model="Blog.username", type="text", name="username", placeholder="Username", require, autofocus)

  .control-group(ng-class="errorClass('title')")
    label.control-label(for="lastname") Title
    .controls
      input(ng-model="Blog.title", type="text", name="title", placeholder="Title", require)

  .control-group(ng-class="errorClass('post')")
    label.control-label(for="post") Post
    .controls
      div(text-angular ng-model="Blog.post", name="post")
      // input(ng-model="Blog.post", type="text", name="post", placeholder="Post", require)

  .control-group(ng-class="errorClass('tag')")
    label.control-label(for="tag") Tag
    .controls
      input(ng-model="Blog.tag", type="text", name="tag", placeholder="Tag", require)

  .control-group
    .controls
      a.btn(ng-click="cancel()") Cancel
      button.btn.btn-success(type="submit") Save
      button.btn.btn-danger(ng-click="deletePost()") Delete

a(href="/Blog/{{Blog.id}}") Back
